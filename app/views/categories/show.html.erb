<h1><%= @category.name %></h1>
<table class="table">
	<tr>
		<td><%= @category.id %></td>
		<td><%= @category.name %></td>
		<% if current_user.present? and current_user.admin? %>
			<td><%= link_to "Güncelle", edit_category_path(@category) %></td>
			<td><%= link_to "Sil", category_path(@category), method: :delete %></td>
		<% end %>
	</tr>
</table>

<h1>Bu Kategoriye Ait Kitaplar</h1><br>
<% @category.books.each do |e| %>
<%= link_to	e.name, book_path(e) %><br>
<% end %>
